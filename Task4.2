def isPalindrome(string):
   if len(string) <= 1:
       return True
   else:
       if string[0] != string[len(string)-1]:
           return False
       else:
           return isPalindrome(string[1:len(string)-1])
       
#output when we enter the string “radar” : 
print(isPalindrome("radar"))

#output when we enter the string “rodent” : 
print(isPalindrome("rodent"))